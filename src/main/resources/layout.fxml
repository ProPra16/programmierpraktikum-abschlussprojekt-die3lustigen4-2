                           <font>
                              <Font name="CMU Serif Roman" size="12.0" />
                           </font>
                        </Label>
                                <Region prefHeight="200.0" prefWidth="200.0" />
                                <Button fx:id="nextStep" mnemonicParsing="false" onAction="#setNextStep" text="Nächster Schritt">
                           <font>
                              <Font name="CMU Sans Serif Bold Extended" size="13.0" />
                           </font></Button>
                            </children>
                            <HBox.margin>
                                <Insets left="20.0" right="20.0" />
