                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </HBox>
                <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox alignment="CENTER" prefHeight="173.0" prefWidth="200.0" spacing="10.0">
                            <children>
                                <Label text="Aktuelle Phase">
                           <font>
                              <Font name="CMU Serif Bold Extended Roman" size="13.0" />
                           </font></Label>
                        <Label fx:id="aktuellePhase" wrapText="true">
                           <font>
                              <Font name="CMU Serif Roman" size="12.0" />
                           </font>
                        </Label>
                                <Region prefHeight="200.0" prefWidth="200.0" />
