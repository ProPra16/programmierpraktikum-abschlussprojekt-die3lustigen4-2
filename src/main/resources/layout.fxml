                            <children>
                                <Label text="Aktuelle Eingabe">
                                    <VBox.margin>
                                        <Insets />
                                    </VBox.margin>
                           <font>
                              <Font name="CMU Serif Bold Extended Roman" size="13.0" />
                           </font>
                                </Label>
                                <TextArea fx:id="writeHere" VBox.vgrow="ALWAYS">
                           <font>
                              <Font name="Monospaced Regular" size="13.0" />
